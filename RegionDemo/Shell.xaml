<Window x:Class="RegionDemo.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegionDemo"
        mc:Ignorable="d"
        xmlns:prism="http://www.codeplex.com/prism"
        Title="Shell" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <ContentControl DockPanel.Dock="Top" prism:RegionManager.RegionName="ToolbarRegion"></ContentControl>
            <ContentControl prism:RegionManager.RegionName="ContentRegion"></ContentControl>
        </DockPanel>

    </Grid>
</Window>
